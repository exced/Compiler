global
    tds:TDS;
#tds {
do
    tds := ES^tds;
    -- TDSPARAM rappel : <"code", INFOTYPE>
    -- Rappel: la LinkedHashMap garantie l'ordre des get = l'ordre des put
    tds.inserer(E^code, new INFOTYPE(E^type));
    ESX^tds := tds;
end  
}
#stds {
